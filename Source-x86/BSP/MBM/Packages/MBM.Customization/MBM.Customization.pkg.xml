<?xml version="1.0" encoding="utf-8"?>
 <Package xmlns="urn:Microsoft.WindowsPhone/PackageSchema.v8.00"
    Owner="$(OEMNAME)"
    OwnerType="OEM"
    ReleaseType="Production"
    Platform="x86"
    Component="MBM"
    SubComponent="Customization">
      <Components>
        <OSComponent>
            <RegKeys>
                <RegKey KeyName="$(hklm.enum)\ACPI\PNP0501\1\Device Parameters">
                    <RegValue 
                        Name="PortName"
                        Type="REG_SZ"
                        Value="COM2"/>
                </RegKey>
                <RegKey KeyName="$(hklm.enum)\ACPI\PNP0501\0\Device Parameters">
                    <RegValue 
                        Name="PortName"
                        Type="REG_SZ"
                        Value="COM1"/>
                </RegKey>
                <RegKey KeyName="$(hklm.enum)\ACPI\PNP0501\11\Device Parameters">
                    <RegValue 
                        Name="PortName"
                        Type="REG_SZ"
                        Value="COM4"/>
                </RegKey>
                <RegKey KeyName="$(hklm.enum)\ACPI\PNP0501\10\Device Parameters">
                    <RegValue 
                        Name="PortName"
                        Type="REG_SZ"
                        Value="COM3"/>
                </RegKey>
                <RegKey KeyName="$(hklm.control)\DeviceOverrides\*PNP0501\LocationPaths\*">
                    <RegValue 
                        Name="Removable"
                        Type="REG_DWORD"
                        Value="1"/>
                </RegKey>
             </RegKeys> 
        </OSComponent>
      </Components>
</Package>